<% @user.recipes.each do |recipe| %>
  <div class="recipe">
    <div class="title-remove">
        <h2><%= link_to recipe.name, recipe %></h2>
        <% if can? :destroy, recipe %>
            <%= form_with url: recipe_path(recipe) , method: :delete do %>
                <%= submit_tag 'Remove' %>
            <% end %>
        <% end %>
    </div>
    <p><%= recipe.description %></p>
    
  </div>
<% end %>

<div class= "recipe-container">
<h2 class="recipe-header">Create a new recipe</h2>
    <%= form_for([ @user.recipes.build]) do |f|%>
        <p>
            <%= f.label :name, "Name of the recipe"%>
            <%= f.text_field :name, class: "recipe-field" %>
        </p>
        <p>
            <%= f.label :preparation_time, "Preparation time(minutes)"%>
            <%= f.number_field :preparation_time, class: "recipe-field" %>
        </p>
        <p>
            <%= f.label :cooking_time, "Cooking time(minutes)" %>
            <%= f.number_field :cooking_time, class: "recipe-field" %>
        </p>
        <p>
            <%= f.label :description, "Description" %>
            <%= f.text_area :description, class: "recipe-field" %>
        </p>
        <p>
            <%= f.label :public, "Public" %>
            <%= f.check_box :public,  class: "check" %>
        </p>
        <p>
            <%= f.submit "Create Recipe", class: "btn" %>
        </p>
    <% end %>
</div>